<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.lencorp.com.arguilechessclock.Settings"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/etTime"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="32dp"
        android:maxLength="5"
        android:ems="10"
        android:hint="Enter in Minutes"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintLeft_toRightOf="@+id/radioGroup"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spTime"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:onClick="SaveSettings"
        android:text="Save Settings"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="378dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <ToggleButton
        android:id="@+id/tbSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:checked="true"
        android:text="ToggleButton"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="73dp"
        android:layout_height="30dp"
        android:text="Sound"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/tbSound"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="92dp" />

    <Spinner
        android:id="@+id/spTime"
        android:layout_width="215dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/radioGroup"
        app:layout_constraintHorizontal_bias="0.466"
        android:layout_marginTop="71dp"
        app:layout_constraintTop_toBottomOf="@+id/tbSound" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/radioGroup"
        app:layout_constraintRight_toLeftOf="@+id/etTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.67">

        <RadioButton
            android:id="@+id/rbPresetTimes"
            android:layout_width="123dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:checked="true"
            android:text="Preset Times"
            android:onClick="OnRadioButtonClicked"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="146dp" />


        <RadioButton
            android:id="@+id/rbCustomTime"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Custom Time"
            android:onClick="OnRadioButtonClicked"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="209dp" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
